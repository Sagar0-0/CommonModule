<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardCourseImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/categoryImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_220"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,3:4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/courseCorner" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/galleryTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen48"
            android:layout_gravity="bottom"
            android:background="@drawable/cousrse_bottom_background"
            android:paddingStart="@dimen/dimen16"
            android:paddingTop="@dimen/dimen_14"
            android:singleLine="false"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimenText16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="RtlSymmetry" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
