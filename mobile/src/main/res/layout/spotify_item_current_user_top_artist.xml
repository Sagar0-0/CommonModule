<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spotify="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="topArtistItem"
            type="fit.asta.health.thirdparty.spotify.model.net.top.ItemTopArtist" />

    </data>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        spotify:openInSpotify="@{topArtistItem.uri}">

        <ImageView
            android:id="@+id/currentUserTopArtistImage"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:contentDescription="@string/current_user_s_top_artists"
            spotify:loadCircularImageFromURL="@{topArtistItem.images}" />

        <TextView
            android:id="@+id/currentUserTopTrackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{topArtistItem.name}"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</layout>