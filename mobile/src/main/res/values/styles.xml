<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <!--sushi's change-->
        <item name="colorAccent">@color/colorPrimary</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="popupTheme">@style/PopupTheme</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:background">@color/colorTransparent</item>
        <!--<item name="logo">@drawable/ic_toolbar_logo</item>
        <item name="displayOptions">useLogo|showHome</item>-->
    </style>

    <style name="CollapsingTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:tint">@color/colorSecondary</item>
    </style>

    <style name="CollapsedText" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="ExpandedText" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/dimen_text_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!--<item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#000000</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Light">
        <!--sushi changed-->
        <!--<item name="android:background">@color/colorPrimary</item>-->
        <item name="android:background">@color/colorOnPrimary</item>
        <!--<item name="android:textColor">@color/text1</item>-->
    </style>

    <style name="PrefSummaryTextStyle" parent="PreferenceSummaryTextStyle" />

    <!--<style name="profileTxtStyle">
        <item name="android:textColor">@color/profileTxtColor</item>
    </style>-->

    <!-- styles.xml -->
    <style name="h6">
        <item name="android:textSize">20sp</item>
        <!--<item name="android:letterSpacing">0.01</item>-->
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <!-- styles.xml -->

    <style name="robotoMedium">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
</resources>
