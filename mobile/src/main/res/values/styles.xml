<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <!--sushi's change-->
        <item name="colorAccent">@color/colorPrimary</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="popupTheme">@style/PopupTheme</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:background">@color/colorPrimaryDark</item>
        <!--<item name="logo">@drawable/ic_toolbar_logo</item>
        <item name="displayOptions">useLogo|showHome</item>-->
    </style>

    <style name="CollapsingTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:tint">@color/colorSecondary</item>
    </style>

    <style name="CollapsedText" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="ExpandedText" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/dimen_text_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!--<item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="ProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#000000</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupTheme" parent="Theme.AppCompat.Light">
        <!--sushi changed-->
        <!--<item name="android:background">@color/colorPrimary</item>-->
        <item name="android:background">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/text1</item>
    </style>

    <style name="PrefSummaryTextStyle" parent="PreferenceSummaryTextStyle" />

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar">
        <item name="android:scaleType">center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxHeight">42dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="maxWidth">16dp</item>

    </style>

    <style name="profileEdtTxt">
        <item name="android:padding">10dp</item>
        <item name="text_size">14sp</item>
        <item name="android:ems">15</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/edit_height_weight</item>

    </style>

    <style name="profileActionBtn">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:text">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <!--sushi changed-->
        <!-- <item name="backgroundTint">@color/colorAccent</item>-->
        <item name="backgroundTint">@color/colorSecondary</item>

    </style>

    <style name="profileTxtStyle">
        <item name="android:textColor">@color/profileTxtColor</item>
    </style>

    <!-- styles.xml -->
